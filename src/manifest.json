{
    "manifest_version": 3,
    "name": "Expire Tabs",
    "version": "1.0.0",
    "description": "Automatically closes tabs that haven't been focused for a while.",
    "permissions": ["tabs", "storage", "alarms"],
    "background": {
        "service_worker": "background/background.bundle.js"
    },
    "firefox:background": {
        "scripts": ["background/background.bundle.js"]
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "firefox:browser_specific_settings": {
        "gecko": {
            "id": "expire-tabs@vict0rsch"
        }
    }
}
