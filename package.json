{
    "name": "expire-tabs",
    "version": "1.0.0",
    "description": "A simple browser (Chrome & Firefox) that closes your tabs after some time. The time taken into account is the time since the tab was last opened / focused.",
    "main": "src/background/main.js",
    "scripts": {
        "build:js": "rollup -c rollup.config.mjs",
        "watch:js": "rollup -c rollup.config.mjs -w",
        "dev": "concurrently \"npm run watch:js\" \"extension dev src --browser=chrome\"",
        "build": "npm run build:js && extension build src --browser=chrome && extension build src --browser=firefox",
        "start": "npm run build:js && extension start src",
        "pretest": "npm run build:js",
        "test": "mocha test/**/*.mjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vict0rsch/expire-tabs.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "bugs": {
        "url": "https://github.com/vict0rsch/expire-tabs/issues"
    },
    "homepage": "https://github.com/vict0rsch/expire-tabs#readme",
    "devDependencies": {
        "@prefresh/core": "^1.5.9",
        "@prefresh/utils": "^1.2.1",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "chai": "^6.2.1",
        "concurrently": "^9.2.1",
        "extension": "^2.1.3",
        "mocha": "^11.7.5",
        "preact": "^10.27.2",
        "puppeteer": "^24.31.0",
        "rollup": "^4.53.3",
        "sinon": "^21.0.0"
    }
}
